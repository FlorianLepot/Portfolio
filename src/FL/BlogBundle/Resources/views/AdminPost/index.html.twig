{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Post list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Slug</th>
                <th>Teaser</th>
                <th>Content</th>
                <th>Datepublish</th>
                <th>Dateedit</th>
                <th>Author</th>
                <th>Published</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_posts_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.slug }}</td>
                <td>{{ entity.teaser }}</td>
                <td>{{ entity.content }}</td>
                <td>{% if entity.datePublish %}{{ entity.datePublish|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.dateEdit %}{{ entity.dateEdit|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.author }}</td>
                <td>{{ entity.published }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_posts_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_posts_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_posts_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
