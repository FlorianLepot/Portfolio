{% extends "FLBlogBundle::admin_layout.html.twig" %}

{% block menuBlog %}class="active"{% endblock %}
{% block menuBlogPosts %}class="active"{% endblock %}

{% block body %}


<section class="panel">
    <header class="panel-heading">
        <a href="{{ path('admin_posts_edit', { 'id': entity.id }) }}" class="btn btn-xs btn-warning"><i class="fa fa-pencil-square-o"></i> Modifier</a>
        <a href="{{ path('admin_posts_edit', { 'id': entity.id }) }}" class="btn btn-xs btn-danger"><i class="fa fa-trash-o"></i> Supprimer</a>
        {#<li>{{ form(delete_form) }}</li>#}
        <span style="margin-left: 15px;">{{ entity.name }}</span>
        <span class="tools pull-right"><a href="javascript:;" class="fa fa-chevron-down"></a></span>
    </header>
    <div class="panel-body">
        <table class="table  table-hover">
            <tdead>
                <tr>
                    <td>Nom</td>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <td>Slug</td>
                    <td>{{ entity.slug }}</td>
                </tr>
                <tr>
                    <td>Date de publication</td>
                    <td>{{ entity.datePublish|date('d/m/Y H:i:s') }}</td>
                </tr>
                <tr>
                    <td>Derni√®re modification</td>
                    <td>{{ entity.dateEdit|date('d/m/Y H:i:s') }}</td>
                </tr>
                <tr>
                    <td>Auteur</td>
                    <td>{{ entity.author }}</td>
                </tr>
                <tr>
                    <td>Statut</td>
                    <td><span class="label label-success label-mini"><i class="fa fa-check"></i></span> {{ entity.published }}</td>
                </tr>
            </tbody>
        </table>
    </div>
</section>

<section class="panel">
    <header class="panel-heading">
        Introduction
    </header>
    <div class="panel-body">
        {{ entity.teaser|raw }}
    </div>
</section>

<iframe src="{{ path('posts_view', {'id': entity.id}) }}" style="width: 100%; height: 100%; border: 1px solid #D2D2D2;" scrolling="no" id="iframe" onload="javascript:resizeIframe(this);"></iframe>

<script language="javascript" type="text/javascript">
  function resizeIframe(obj) {
    obj.style.height = obj.contentWindow.document.body.scrollHeight + 'px';
  }
</script>

{% endblock %}
