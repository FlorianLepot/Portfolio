<div class="panel">
  <div class="panel-body">
    <div class="blog-post">
      <h3>Derniers articles</h3>
      {% for post in posts %}
        <div class="media">
          <a href="javascript:;" class="pull-left">
            <img alt="" src="{{ asset(post.image.path) }}" style="width: 81px;" class=" ">
          </a>
          <div class="media-body">
            <h5 class="media-heading"><a href="javascript:;">{{ post.name }}</a></h5>
            <p>
              {{ post.datePublish | date('d F Y - H:i') }}<br />
              <a href="{{ path('posts_view', { 'id': post.id }) }}#comments"><span class="count-comments" data-disqus-url="{{ url('posts_view', { 'id': post.id }) }}"></span></a>
            </p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>