{% extends "FLBlogBundle::admin_layout.html.twig" %}

{% block menuBlog %}class="active"{% endblock %}
{% block menuBlogPosts %}class="active"{% endblock %}

{% block body %}
<section class="panel">
    <header class="panel-heading">
        <a href="{{ path('admin_posts_edit', { 'id': entity.id }) }}" class="btn btn-xs btn-warning"><i class="fa fa-pencil-square-o"></i> Modifier</a>
        <a href="{{ path('admin_posts_edit', { 'id': entity.id }) }}" class="btn btn-xs btn-danger"><i class="fa fa-trash-o"></i> Supprimer</a>
        {#<li>{{ form(delete_form) }}</li>#}
        <span style="margin-left: 15px;">{{ entity.name }}</span>
        <span class="tools pull-right"><a href="javascript:;" class="fa fa-chevron-down"></a></span>
    </header>
    <div class="panel-body">
        <table class="table  table-hover">
            <tbody>
                <tr>
                    <td>Id</td>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <td>Name</td>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <td>Slug</td>
                    <td>{{ entity.slug }}</td>
                </tr>
            </tbody>
        </table>
    </div>
</section>
{% endblock %}