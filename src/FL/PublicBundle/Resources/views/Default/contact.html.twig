{% extends "FLPublicBundle::layout.html.twig" %}

{% block body %}
	<div class="block">
		<div class="content">
			<div class="main-title">Contactez-moi !</div>
			<form class="form-horizontal" role="form">
			  <div class="form-group">
			    <label for="name" class="col-sm-3 control-label">Votre nom &amp; pr√©nom :</label>
			    <div class="col-sm-7">
			      <input type="text" class="form-control" id="name" name="name" required>
			    </div>
			  </div>
			  <div class="form-group">
			    <label for="email" class="col-sm-3 control-label">Votre adresse email :</label>
			    <div class="col-sm-7">
			      <input type="email" class="form-control" id="email" name="email" required>
			    </div>
			  </div>
			  <div class="form-group">
			    <label for="title" class="col-sm-3 control-label">Titre de votre message :</label>
			    <div class="col-sm-7">
			      <input type="text" class="form-control" id="title" name="title">
			    </div>
			  </div>
			  <div class="form-group">
			    <label for="message" class="col-sm-3 control-label">Votre message :</label>
			    <div class="col-sm-7">
			      <textarea class="form-control" style="height: 150px;" id="message" name="message"></textarea>
			    </div>
			  </div>
			  <div class="form-group">
			    <div class="col-sm-offset-3 col-sm-9">
			      <button type="submit" class="btn-submit">Envoyer le message</button>
			    </div>
			  </div>
			</form>
			<div style="clear: both;"></div>
    	</div>
    </div>
{% endblock %}